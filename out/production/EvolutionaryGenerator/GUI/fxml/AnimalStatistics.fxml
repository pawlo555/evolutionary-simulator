<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="500.0" fx:controller="GUI.Controllers.AnimalStatisticsController"
      xmlns:fx="http://javafx.com/fxml">

    <Label styleClass="Title" text="Animal Statistics" />
    <VBox styleClass="Stats">
        <HBox>
            <Label text="Number of children: " />
            <Label fx:id="numberOfChildren" styleClass="data" text="-" />
            <Label text="Number of descendants: " />
            <Label fx:id="numberOfDescendants" styleClass="data" text="-" />
        </HBox>
        <HBox>
            <Label text="Die Epoch: " />
            <Label fx:id="dieEpoch" styleClass="data" text="-" />
            <Label text="ID: " />
            <Label fx:id="id" styleClass="data" text="-" />
            <Label text="Energy: " />
            <Label fx:id="energy" styleClass="data" text="-" />
        </HBox>
        <HBox>
            <Label text="Genome: " />
            <Label fx:id="genome" styleClass="data" text="-" />
        </HBox>
    </VBox>
</VBox>
